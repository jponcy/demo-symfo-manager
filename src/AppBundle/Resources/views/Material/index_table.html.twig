{% if entities %}
<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
    </tr>
  </thead>
  <tbody>
    {% for entity in entities %}
    <tr>
      <td>{{ entity.name }}</td>
      <td>{{ entity.type }}</td>
    </tr>
    {#
    {% else %}
    <tr class="warning">
    <td colspan="2">No records found</td>
    </tr>
    #}
    {% endfor %}
  </tbody>
</table>
{% else %}
  <p class="text-warning">No records found</p>
{% endif %}
