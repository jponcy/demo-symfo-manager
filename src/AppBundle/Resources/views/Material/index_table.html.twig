{% if entities %}
<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th>Name</th>
			<th>Type</th>
			<th>Number</th>
			<th>Derni√©re update</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		{% for entity in entities %}
		<tr>
			<td>{{ entity.name }}</td>
			<td>{{ entity.type }}</td>
			<td>{{ entity.number }}</td>
			<td>{{ entity.updatedAt|date() }}</td>
			<td>
				<div class="btn-group">
					<a href="{{ path('app_material_view', {id: entity.id}) }}"
						class="btn btn-success"> <i class="glyphicon glyphicon-user"></i>
						Profil
					</a> <a href="{{ path('app_material_update', {id: entity.id}) }}"
						class="btn btn-default"> <i class="glyphicon glyphicon-edit"></i>
						Update
					</a> <a href="{{ path('app_material_delete', {id: entity.id}) }}"
						class="btn btn-danger"> <i class="glyphicon glyphicon-remove"></i>
						Delete
					</a>
				</div>
			</td>
		</tr>
		{# {% else %} <tr class="warning"> <td colspan="2">No records
		found</td> </tr> #}
		{% endfor %}
	</tbody>
</table>
{% else %}
<p class="text-warning">No records found</p>
{% endif %}
