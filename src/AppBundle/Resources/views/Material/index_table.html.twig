{% if entities %}
<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {% for entity in entities %}
    <tr>
      <td>{{ entity.name }}</td>
      <td>{{ entity.type }}</td>
      <td>
        <div class="btn-group">
          <a href="{{ entity.name }}/update" class="btn btn-default">
            <i class="glyphicon glyphicon-edit"></i>
            Update
          </a>
          <a href="{{ entity.name }}/delete" class="btn btn-danger">
            <i class="glyphicon glyphicon-remove"></i>
            Delete
          </a>
        </div>
      </td>
    </tr>
    {#
    {% else %}
    <tr class="warning">
    <td colspan="2">No records found</td>
    </tr>
    #}
    {% endfor %}
  </tbody>
</table>
{% else %}
  <p class="text-warning">No records found</p>
{% endif %}
