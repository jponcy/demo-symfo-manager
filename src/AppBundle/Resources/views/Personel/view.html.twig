{% extends 'AppBundle::base.html.twig' %}

{% import _self as personel %}

{% macro table(data) %}
  {% include('AppBundle:Personel:index_table.html.twig')
    with {entities: data}
    only
    %}
{% endmacro %}

{% block pagetitle %} {{ entities.name }} {{ entities.lastname }} {% endblock %}

{% block body %}
  {{ parent() }}
  
  
	<!-- TODO: add informations view -->
	<!-- TODO: add func to add material -->
	
<table class="table table-striped table-hover table-condensed">
	<tr>
		<th>Name</th>
		<th>Type</th>
		<th>Number</th>
		<th>Derni√©re update</th>
	</tr>
	<tr>
	<tbody>
		{% for entity in entities.materials %}
		<tr>
			<td>{{ entity.name }}</td>
			<td>{{ entity.type }}</td>
			<td>{{ entity.number }}</td>
			<td>{{ entity.updatedAt|date() }}</td>
		</tr>
		{% else %}
		<tr class="warning">
			<td colspan="4">No records found</td>
		</tr>
		{% endfor %}
	</tbody>
	</tr>
</table>

{% endblock %}
